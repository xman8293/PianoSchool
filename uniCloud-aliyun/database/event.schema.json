{
  "bsonType": "object",
  "required": ["title", "start_time"],
  "properties": {
    "title": {
      "bsonType": "string",
      "title": "活动名称",
      "maxLength": 50
    },
    "cover": {
      "bsonType": "string",
      "title": "封面图",
      "format": "url"
    },
    "start_time": {
      "bsonType": "string",
      "title": "开始时间"
    },
    "address": {
      "bsonType": "string",
      "title": "活动地址"
    },
    "status": {
      "bsonType": "string",
      "title": "状态",
      "enum": ["pending", "ongoing", "ended"]
    },
    "brief": {
      "bsonType": "string",
      "title": "活动简介",
      "maxLength": 200
    }
  },
  "permission": {
    "read": true
  }
} 

