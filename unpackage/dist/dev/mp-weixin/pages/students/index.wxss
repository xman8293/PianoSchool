
.student-list-container.data-v-2b46f5fa {
  background: #f5f7fa;
  min-height: 100vh;
  padding: 30rpx;
}
.section-header.data-v-2b46f5fa {
  background: linear-gradient(135deg, #2A3F54, #3A5F7A);
  border-radius: 16rpx;
  margin: 30rpx;
  padding: 40rpx 0;
  box-shadow: 0 8rpx 24rpx rgba(42,63,84,0.15);
}
.title.data-v-2b46f5fa {
  font-size: 40rpx;
  font-weight: 600;
  color: #FFFFFF;
  text-align: center;
  display: block;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}
.student-grid.data-v-2b46f5fa {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  padding: 0 30rpx;
}
.student-card.data-v-2b46f5fa {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.08);
  transition: transform 0.3s ease;
}
.student-card.data-v-2b46f5fa:active {
  transform: scale(0.98);
}
.avatar-wrapper.data-v-2b46f5fa {
  position: relative;
  height: 360rpx;
  border-bottom: 1px solid #eee;
}
.avatar.data-v-2b46f5fa {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.honor-tag.data-v-2b46f5fa {
  position: absolute;
  bottom: 20rpx;
  left: 50%;
  transform: translateX(-50%);
  background: linear-gradient(45deg, #2A3F54, #3A5F7A);
  color: #FFFFFF;
  padding: 8rpx 30rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  max-width: 80%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.info.data-v-2b46f5fa {
  padding: 24rpx;
  background: #fff;
}
.name.data-v-2b46f5fa {
  font-size: 32rpx;
  font-weight: 600;
  color: #2A3F54;
  display: block;
  margin-bottom: 12rpx;
}
.intro-wrapper.data-v-2b46f5fa {
  position: relative;
}
.intro.data-v-2b46f5fa {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 8rpx;
  transition: all 0.3s;
}
.achievement.data-v-2b46f5fa {
  display: block;
  font-size: 24rpx;
  color: #007BFF;
  font-weight: 500;
}

/* 新增提示框样式 */
.tooltip.data-v-2b46f5fa {
  position: fixed;
  background: rgba(0,0,0,0.9);
  color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  line-height: 1.4;
  max-width: 500rpx;
  z-index: 999;
  pointer-events: none;
  animation: fadeIn-2b46f5fa 0.2s ease;
}
@keyframes fadeIn-2b46f5fa {
from { opacity: 0; transform: translateY(10rpx);
}
to { opacity: 1; transform: translateY(0);
}
}
